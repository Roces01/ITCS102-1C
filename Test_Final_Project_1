# This function lets the user create a list of anime titles.
# The list keeps storing items until the user types 'exit'.
def MyList():
    Anime_List = []   # List created once so entries are saved during the loop

    while True:
        Anime = input("Enter an anime (or type 'exit' to terminate): ")

        # If user types exit, stop asking for more anime
        if Anime.lower() == 'exit':
            print("Program terminated.")
            break

        # Add the anime to the list
        Anime_List.append(Anime)
        print(f"'{Anime}' has been added.")

    # After the loop ends, show the entire anime list
    print("\nYour list:")
    for Animee in Anime_List:
        print(f"- {Animee}")

def IFEL():
    print("Welcome!!")
    print("Choose Genre Below.")
    print("1. Anime")
    print("2. Action")
    print("3. Horror")

    # Ask the user for the genre choice
    G = input("Choose Genre-->").strip()

    if G == "1":
        print("You Choose Anime.")
    elif G == "2":
        print("You Choose Action.")
    elif G == "3":
        print("You Choose Horror.")
    else:
        print("Invalid choice! Please select 1, 2, or 3.")
        return  # Exit the function if the genre is invalid

    # Ask the user to choose the duration (short, medium, long)
    print("Choose Duration")
    print("1. Short")
    print("2. Medium")
    print("3. Long")

    Duration = input("Choose Duration-->").strip()

    if Duration == "1":
        print("You Choose Short Duration.")
    elif Duration == "2":
        print("You Choose Medium Duration.")
    elif Duration == "3":
        print("You Choose Long Duration.")
    else:
        print("Invalid duration! Please select 1, 2, or 3.")
        return  # Exit the function if the duration is invalid

    # Ask the user to choose the decade (1990s or 2000s)
    print("Choose Year")
    print("1. 1990s")
    print("2. 2000s")

    Decades = input("Choose Year-->").strip()

    if Decades == "1":
        print(f"There is nothing from {G} in the 1990s.")
    elif Decades == "2":
        print(f"There is nothing from {G} in the 2000s.")
    else:
        print("Invalid year! Please select 1 (1990s) or 2 (2000s).")



    
        
    
        


# This function uses a while loop that continues as long as user types "yes"
def Wlop():
    while True:
        a = input("Want to continue (Yes or No) --> ").lower()

        # If user types yes, it continues the loop
        if a == "yes":
            print("This will continue!!!")

        # If user types no, it stops the loop
        elif a == "no":
            print("Stop")
            break

        # Invalid input handling
        else:
            print("Invalid input. Type Yes or No.")


# This function calculates cost, discount, and change
def IFS():
    # Asking user for payment, item price, and quantity
    P = float(input("Input Your Payment --> "))
    IP = float(input("Item Price --> "))
    QTY = float(input("Quantity --> "))

    C = IP * QTY   # Total cost

    # Apply discount only if cost reaches 100 or more
    if C >= 100:
        D = C * 0.10     # 10% discount
        DP = C - D       # Discounted price
        CH = P - DP      # Change
        print("Cost -->", C)
        print("Discount -->", D)
        print("Discounted Price -->", DP)
        print("Change -->", CH)

    # If no discount
    else:
        CH = P - C       # Change
        print("Cost -->", C)
        print("Change -->", CH)


# Clears the screen
import os
os.system('cls')

# Title banner

print('____________________________________')
print("My Work Compilation")

# Main program loop
while True:
    # Menu Options
    print("A. Print Statement")
    print("B. Listing")
    print("C. While Loop")
    print("D. IF / Else")
    print("E. Elif")
    print("F. Exit")
    print('____________________________________')

    # User choice
    Input1 = input("Input your choice --> ").upper().strip()

    # Option A: Simple print information
    if Input1 == 'A':
        Name = input("Enter Your Name --> ")
        Age = input("Enter Your Age --> ")
        Loc = input("Enter Your Location --> ")
        print(f"\nWelcome {Name}, Good Day!!\nYou are currently {Age}, living at {Loc}.")
        print('____________________________________')

    # Option B: Call MyList() function
    elif Input1 == 'B':
        MyList()

    # Option C: Call Wlop() function
    elif Input1 == 'C':
        Wlop()

    # Option D: Call IFS() function
    elif Input1 == 'D':
        IFS()

    elif Input1 == 'E':
        IFEL()

    # Option E: Exit program
    elif Input1 == 'F':
        print("Program Terminated")
        break

    # If user enters any other letter
    else:
        print("Invalid Choice. Please Re-Enter")
