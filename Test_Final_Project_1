# SIMPLE LOGIN SYSTEM


def login():
    USERNAME = "rocesjp"
    PASSWORD = "pogi123"

    print("LOGIN REQUIRED")

    while True:
        user = input("Enter Username: ")
        pw = input("Enter Password: ")

        if user == USERNAME and pw == PASSWORD:
            print("\nAba Tama!\n")
            break
        else:
            print("Mali Naman. Ulitin mo ngani.\n")



# Your original functions below


def MyList():
    Anime_List = []
    while True:
        Anime = input("Enter An Anime (or Exit Lang Kung Di Mo Na Kaya): ")
        if Anime.lower() == 'exit':
            print("Program terminated.")
            break
        Anime_List.append(Anime)
        print(f"'{Anime}' has been added.")
    print("\nYour list:")
    for Animee in Anime_List:
        print(f"- {Animee}")


def IFEL():
    print("Welcome!!")
    print("Choose Genre Below.")
    print("1. Anime")
    print("2. Action")
    print("3. Horror")

    G = input("Choose Genre--> ").strip()

    if G == "1":
        print("You Choose Anime.")
    elif G == "2":
        print("You Choose Action.")
    elif G == "3":
        print("You Choose Horror.")
    else:
        print("Invalid choice! Please select 1, 2, or 3.")
        input("Press Enter to return to menu...")
        return

    print("Choose Duration")
    print("1. Short")
    print("2. Medium")
    print("3. Long")

    Duration = input("Choose Duration--> ").strip()

    if Duration == "1":
        print("You Choose Short Duration.")
    elif Duration == "2":
        print("You Choose Medium Duration.")
    elif Duration == "3":
        print("You Choose Long Duration.")
    else:
        print("Invalid duration! Please select 1, 2, or 3.")
        input("Press Enter to return to menu...")
        return

    print("Choose Year")
    print("1. 1990s")
    print("2. 2000s")

    Decades = input("Choose Year--> ").strip()

    if Decades == "1":
        print("There is nothing from this genre in the 1990s.")
    elif Decades == "2":
        print("There is nothing from this genre in the 2000s.")
    else:
        print("Invalid year! Please select 1 or 2.")
        input("Press Enter to return to menu...")
        return

    input("Done! Press Enter to return to menu...")


def Wlop():
    while True:
        a = input("Continue. Kaya Pa Ba Ya (Yes or No) --> ").lower()
        if a == "yes":
            print("Tuloy Natin To. Miss You")
        elif a == "no":
            print("Tigil Na Natin To. Di Ko Na Kaya")
            break
        else:
            print("Yes Or No Na Nga Lang Di Pa Masulat.")


def IFS():
    P = float(input("Input Your Payment --> "))
    IP = float(input("Presyo ngani --> "))
    QTY = float(input("Ilan Gusto Mo Ya --> "))

    C = IP * QTY

    if C >= 100:
        D = C * 0.10
        DP = C - D
        CH = P - DP
        print("Cost -->", C)
        print("Discount -->", D)
        print("Discounted Price -->", DP)
        print("Change -->", CH)
    else:
        CH = P - C
        print("Babayaran Mo Ya -->", C)
        print("Sukli Mo Ya -->", CH)

