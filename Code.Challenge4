# This function uses a while loop that continues as long as user types "yes"
def Wlop():
    while True:
        a = input("Want to continue (Yes or No) --> ").lower()

        # If user types yes, it continues the loop
        if a == "yes":
            print("This will continue!!!")

        # If user types no, it stops the loop
        elif a == "no":
            print("Stop")
            break

        # Invalid input handling
        else:
            print("Invalid input. Type Yes or No.")


# This function calculates cost, discount, and change
def IFS():
    # Asking user for payment, item price, and quantity
    P = float(input("Input Your Payment --> "))
    IP = float(input("Item Price --> "))
    QTY = float(input("Quantity --> "))

    C = IP * QTY   # Total cost

    # Apply discount only if cost reaches 100 or more
    if C >= 100:
        D = C * 0.10     # 10% discount
        DP = C - D       # Discounted price
        CH = P - DP      # Change
        print("Cost -->", C)
        print("Discount -->", D)
        print("Discounted Price -->", DP)
        print("Change -->", CH)

    # If no discount
    else:
        CH = P - C       # Change
        print("Cost -->", C)
        print("Change -->", CH)


