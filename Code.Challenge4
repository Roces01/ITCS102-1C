# This function lets the user create a list of anime titles.
# The list keeps storing items until the user types 'exit'.
def MyList():
    Anime_List = []   # List created once so entries are saved during the loop

    while True:
        Anime = input("Enter an anime (or type 'exit' to terminate): ")

        # If user types exit, stop asking for more anime
        if Anime.lower() == 'exit':
            print("Program terminated.")
            break

        # Add the anime to the list
        Anime_List.append(Anime)
        print(f"'{Anime}' has been added.")

    # After the loop ends, show the entire anime list
    print("\nYour list:")
    for Animee in Anime_List:
        print(f"- {Animee}")


