# This function lets the user create a list of anime titles.
# The list keeps storing items until the user types 'exit'.
def MyList():
    Anime_List = []   # List created once so entries are saved during the loop

    while True:
        Anime = input("Enter an anime (or type 'exit' to terminate): ")

        # If user types exit, stop asking for more anime
        if Anime.lower() == 'exit':
            print("Program terminated.")
            break

        # Add the anime to the list
        Anime_List.append(Anime)
        print(f"'{Anime}' has been added.")

    # After the loop ends, show the entire anime list
    print("\nYour list:")
    for Animee in Anime_List:
        print(f"- {Animee}")


# This function uses a while loop that continues as long as user types "yes"
def Wlop():
    while True:
        a = input("Want to continue (Yes or No) --> ").lower()

        # If user types yes, it continues the loop
        if a == "yes":
            print("This will continue!!!")

        # If user types no, it stops the loop
        elif a == "no":
            print("Stop")
            break

        # Invalid input handling
        else:
            print("Invalid input. Type Yes or No.")


# This function calculates cost, discount, and change
def IFS():
    # Asking user for payment, item price, and quantity
    P = float(input("Input Your Payment --> "))
    IP = float(input("Item Price --> "))
    QTY = float(input("Quantity --> "))

    C = IP * QTY   # Total cost

    # Apply discount only if cost reaches 100 or more
    if C >= 100:
        D = C * 0.10     # 10% discount
        DP = C - D       # Discounted price
        CH = P - DP      # Change
        print("Cost -->", C)
        print("Discount -->", D)
        print("Discounted Price -->", DP)
        print("Change -->", CH)

    # If no discount
    else:
        CH = P - C       # Change
        print("Cost -->", C)
        print("Change -->", CH)


# Clears the screen (works on Windows)
import os
os.system('cls')

# Title banner
print('____________________________________')
print("My Work Compilation")

# Main program loop
while True:
    # Menu Options
    print("A. Print Statement")
    print("B. Listing")
    print("C. While Loop")
    print("D. IF / Else")
    print("E. Exit")
    print('____________________________________')

    # User choice
    Input1 = input("Input your choice --> ").upper().strip()

    # Option A: Simple print information
    if Input1 == 'A':
        Name = input("Enter Your Name --> ")
        Age = input("Enter Your Age --> ")
        Loc = input("Enter Your Location --> ")
        print(f"\nWelcome {Name}, Good Day!!\nYou are currently {Age}, living at {Loc}.")
        print('____________________________________')

    # Option B: Call MyList() function
    elif Input1 == 'B':
        MyList()

    # Option C: Call Wlop() function
    elif Input1 == 'C':
        Wlop()

    # Option D: Call IFS() function
    elif Input1 == 'D':
        IFS()

    # Option E: Exit program
    elif Input1 == 'E':
        print("Program Terminated")
        break

    # If user enters any other letter
    else:
        print("Invalid Choice. Please Re-Enter")
