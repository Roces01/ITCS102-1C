import os

os.system('cls')  # Clears the console

login()  # Call login function before showing main menu

print('____________________________________')
print("My Work Compilation")

# MAIN MENU LOOP

while True:

    print("A. Print Statement")
    print("B. List Your Anime")
    print("C. While Loop")
    print("D. Payment")
    print("E. Movies")
    print("F. Exit")
    print('____________________________________')


    Input1 = input("Input your choice --> ").upper().strip()

    # OPTION A: Basic Print Statement

    if Input1 == 'A':

        Name = input("Enter Your Name --> ")

        Age = input("Enter Your Age --> ")

        Loc = input("Enter Your Location --> ")

        print(f"\nKamusta {Name}, Magandang Araw Kalbo!!\nIkaw Ay {Age} Na Pala , Nakatira Ka Pa Rin {Loc}.")
        print('____________________________________')

    # OPTION B: Anime List Function

    elif Input1 == 'B':
        MyList()

    # OPTION C: While Loop Demo

    elif Input1 == 'C':
        Wlop()

    # OPTION D: Payment Calculator

    elif Input1 == 'D':
        IFS()

    # OPTION E: Genre/Year Selector

    elif Input1 == 'E':
        IFEL()

    # OPTION F: Exit Program

    elif Input1 == 'F':
        print("Program Terminated")
        break

    # INVALID MENU CHOICE

    else:
        print("Invalid Choice. Please Re-Enter")
